{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "store:default",
    "dialog:default",
    "shell:default",
    "updater:default",
    {
      "identifier": "http:default",
      "allow": [
        { "url": "https://api.fwv-raura.ch/**" },
        { "url": "https://vault.fwv-raura.ch/**" },
        { "url": "https://order.fwv-raura.ch/**" }
      ]
    }
  ]
}

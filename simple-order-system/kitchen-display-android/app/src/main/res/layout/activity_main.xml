<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Header - Red like website -->
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:background="@color/primary"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Logo -->
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@mipmap/ic_launcher"
                android:background="@drawable/logo_background"
                android:padding="4dp"
                android:contentDescription="@string/app_name" />

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="24dp"
                android:text="@string/app_name"
                android:textColor="@color/text_primary"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Station Filter Tabs -->
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/stationToggle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:singleSelection="true"
                app:selectionRequired="true"
                app:checkedButton="@id/btnAll">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAll"
                    style="@style/StationToggleButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/station_all" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBar"
                    style="@style/StationToggleButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/station_bar" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnKitchen"
                    style="@style/StationToggleButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/station_kitchen" />

            </com.google.android.material.button.MaterialButtonToggleGroup>

            <!-- Putzen Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnClean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/clean"
                android:textSize="16sp"
                app:icon="@drawable/ic_clean"
                app:iconGravity="textStart"
                app:backgroundTint="@color/cleaning_blue" />

            <!-- Connection Status -->
            <TextView
                android:id="@+id/connectionStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/connecting"
                android:textColor="@color/warning"
                android:textSize="14sp" />

            <!-- Settings Button -->
            <ImageButton
                android:id="@+id/btnSettings"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_settings"
                android:contentDescription="@string/settings"
                app:tint="@color/text_primary" />

        </LinearLayout>

        <!-- Orders Grid -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ordersRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="8dp"
            android:clipToPadding="false"
            app:layout_constraintTop_toBottomOf="@id/header"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Empty State -->
        <TextView
            android:id="@+id/emptyState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_orders"
            android:textColor="@color/text_muted"
            android:textSize="24sp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/header"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Cleaning Mode Overlay -->
    <FrameLayout
        android:id="@+id/cleaningOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ§½"
                android:textSize="96sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/cleaning_title"
                android:textColor="@color/text_primary"
                android:textSize="48sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/cleaning_subtitle"
                android:textColor="@color/text_secondary"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/cleaningTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:text="30"
                android:textColor="@color/cleaning_blue"
                android:textSize="144sp"
                android:textStyle="bold"
                android:fontFamily="monospace" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/seconds_remaining"
                android:textColor="@color/text_muted"
                android:textSize="24sp" />

        </LinearLayout>

    </FrameLayout>

</FrameLayout>

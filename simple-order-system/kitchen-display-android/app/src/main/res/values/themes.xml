<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.KitchenDisplay" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Station toggle button style with clear selection state -->
    <style name="StationToggleButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/station_button_text</item>
        <item name="backgroundTint">@color/station_button_background</item>
        <item name="strokeColor">@color/text_primary</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:minHeight">44dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CompleteButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/success</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
</resources>

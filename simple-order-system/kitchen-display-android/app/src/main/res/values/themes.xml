<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.KitchenDisplay" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="StationTab" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/text_primary</item>
        <item name="strokeColor">@color/divider</item>
        <item name="backgroundTint">@color/surface_dark</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="StationTab.Selected">
        <item name="backgroundTint">@color/primary</item>
        <item name="strokeColor">@color/primary</item>
    </style>

    <style name="CompleteButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/accent</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
</resources>

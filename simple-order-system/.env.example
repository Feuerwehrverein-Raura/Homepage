# ========================================
# Order System Configuration
# ========================================

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=orderdb
DB_USER=orderuser
DB_PASSWORD=change-this-password

# For production (docker-compose.prod.yml)
ORDER_DB_PASSWORD=change-this-password

# Backend Configuration
NODE_ENV=production
PORT=3000
APP_URL=http://localhost:8080

# Frontend Configuration
VITE_API_URL=http://localhost:3000

# ========================================
# Online Mode (order.fwv-raura.ch)
# ========================================

# Authentik Configuration
AUTHENTIK_URL=https://auth.fwv-raura.ch
AUTHENTIK_CLIENT_ID_ORDER=order-system
JWT_SECRET=your-jwt-secret-here

# ========================================
# Local Mode (f√ºr Events ohne Internet)
# ========================================

# Set LOCAL_MODE=true to use simple password auth
LOCAL_MODE=false

# Admin password for local mode (default: fwv2026)
ADMIN_PASSWORD=fwv2026

# Local IP for frontend (z.B. 192.168.1.100)
LOCAL_IP=localhost

# ========================================
# Payment Providers (optional)
# ========================================

# SumUp Configuration (inkl. SumUp 3G Terminal)
SUMUP_API_KEY=your-sumup-api-key
SUMUP_MERCHANT_CODE=your-merchant-code
SUMUP_AFFILIATE_KEY=your-affiliate-key
SUMUP_READER_ID=your-terminal-reader-id
SUMUP_BASE_URL=https://api.sumup.com/v0.1

# RaiseNow Configuration
RAISENOW_API_KEY=your-raisenow-api-key
RAISENOW_API_SECRET=your-raisenow-api-secret
RAISENOW_BASE_URL=https://api.raisenow.com/v1
RAISENOW_TOUCHPOINT_ID=your-touchpoint-id
RAISENOW_WEBHOOK_SECRET=your-webhook-secret
